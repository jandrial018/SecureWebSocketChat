{
  "manifest_version": 3,
  "name": "WebSocket Chat Notifier",
  "version": "1.0",
  "description": "Notifies you of new WebSocket messages and shows a badge count.",
  "permissions": [
    "notifications",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "*://microhubapp.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16":  "icons/catIcon16.png",
      "48":  "icons/catIcon48.png",
      "128": "icons/catIcon128.png"
    }
  },
  "icons": {
    "16":  "icons/catIcon16.png",
    "48":  "icons/catIcon48.png",
    "128": "icons/catIcon128.png"
  }
}
